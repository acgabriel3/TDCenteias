<construtorTelas>:

    arquivos: arquivos

    TabbedPanelItem:
        text: 'Visualizador'

        BoxLayout:
            orientation: 'vertical'
            
            BoxLayout:
                TextInput:
                    id: arquivos
                    text: 'esperando mapeamento'
                    show_errors: True

            BoxLayout:
                size_hint_y: None
                height: 30
                Button:
                    text: 'Escolher diretório'
                    on_press: root.show_load()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_press: root.cancel()

            Button:
                text: "Selecionar diretório"
                on_press: root.load(filechooser.path)
