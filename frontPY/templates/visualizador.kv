<construtorTelas>:

    TabbedPanelItem:
        text: 'Visualizador'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                size_hint_y: None
                height: 30
                Button:
                    text: 'Load'
                    on_press: root.show_load()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_press: root.cancel()

            Button:
                text: "Load"
                on_press: root.load(filechooser.path)
